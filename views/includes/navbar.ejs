<style>
  .search-btn{
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover{
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i{
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
  @media(max-width:870px){
    .search-inp{
      width: 200px;
    }
  }
  @media(max-width:770px){
    .search-inp,.search-btn{
     display: none;
    }
  }
  @media(max-width:767px){
    .navbar-collapse{
      box-shadow: 4px 5px  #fe424d;
    border-radius: 1rem;
    height: 10rem;
    display: inline-block;
   background-color: #fff;
    padding-left: 2rem;
      
    }
  }

  .navbar-toggler-icon{
    background-color: #fff;
    color: black;
  }
